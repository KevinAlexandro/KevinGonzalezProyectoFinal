            <Button
                android:id="@+id/btnH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:onClick="myLetterChoice"
                android:text="H" />

            <Button
                android:id="@+id/btnI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:onClick="myLetterChoice"
                android:text="I" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
